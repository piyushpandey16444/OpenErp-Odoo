<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="res_config_settings_view_form_tally" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.tally</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='oauth']" position="after">
                    <div class="col-xs-12 col-md-6 o_setting_box" >
                        <div class="o_setting_right_pane" >
                            <label for="tally_transfer_type"/>
                            <div class="text-muted">
                               Select According to Transfer type
                            </div>
                            <field name="tally_transfer_type" class="o_light_label" widget="radio" force_save="1"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
</odoo>