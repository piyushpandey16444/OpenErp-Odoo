                                                <td class="" style="border-left: 1px solid black;">
                                                    <table style="">
                                                        <tbody>
                                                            <tr class="" style="padding-left:0px; padding-right:0px;">
                                                                <t t-if="l['cgst_tax_name']">
                                                                    <td class="text-right" style="width:68px; padding-right:5px;"><span t-esc="l['cgst_tax_name']"/></td>
                                                                    <td class="text-right" style="padding-left:20px; border-left: 1px solid black;"><span t-esc="l['cgst_tax_price']" /></td>
                                                                </t>
                                                                <t t-if="not l['cgst_tax_name']">
